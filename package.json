{
  "name": "automated-notebooklm",
  "version": "1.0.0",
  "description": "Automate Google NotebookLM for document summarization using Playwright",
  "main": "summarize.ts",
  "scripts": {
    "generate-podcasts": "NODE_TLS_REJECT_UNAUTHORIZED=0 ts-node src/scripts/generatePodcastForUrl.ts",
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "playwright",
    "automation",
    "google",
    "notebooklm"
  ],
  "author": "Omri Lavi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omril321/automated-notebooklm.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@mondaydotcomorg/api": "^11.0.0",
    "@mondaydotcomorg/api-types": "^5.0.5",
    "@types/fluent-ffmpeg": "^2.1.27",
    "chalk": "^4.1.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "playwright": "^1.39.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "user-agents": "^1.1.609"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/node": "^20.8.3",
    "@types/user-agents": "^1.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "vitest": "^3.2.4"
  }
}
